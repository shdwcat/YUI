id: viewport_example
file_type: screen

import:
  - ../Templates/
  - /YUI/Animations/transitions.yui
  - /YUI/Widgets/

  resources:
    textt:
      type: fragment
      content:
        type: text
        trace: true

root:
  type: screen_base
  title: Viewport/Scrolling Example
  items:

    - type: slider
      value: @scroll_x
      min: 0
      max: @scroll_info.x_max ?? 1000
      on_value_changed: @@ value => @scroll_x = value >> floor()
      visible: @scroll_info.x_max > 0
      slider_size: { w: 200, h: 20 }
      thumb_size: { w: 30, h: 20 }

    - type: slider
      value: @scroll_y
      min: 0
      max: @scroll_info.y_max ?? 1000
      on_value_changed: @@ value => @scroll_y = value >> floor()
      visible: @scroll_info.y_max > 0
      slider_size: { w: 200, h: 20 }
      thumb_size: { w: 30, h: 20 }

    - type: border
      padding: [ 2, 2, 2, 2 ]
      border_thickness: 1
      border_color: $theme.resources.control_border
      background: $theme.resources.panel_bg
      content:

        type: viewport
        size: { w: 500, h: 500 }
        content_w: 500
        viewport_x: @scroll_x
        viewport_y: @scroll_y
        on_viewport_info: @@ value => @scroll_info = value
        events:
          on_mouse_wheel_up: @scroll_y = max(@scroll_y - @scroll_info.y_max * 0.05, 0) >> floor()
          on_mouse_wheel_down: @scroll_y = min(@scroll_y + @scroll_info.y_max * 0.05, @scroll_info.y_max) >> floor()
        content:

          type: panel
          padding: 5
          id: vp_content
          elements:

            - type: text
              text_style: title
              text: Loreum Ipsum

